    <text xml:id="Pagina_1_2" subtype="manuscript"> 
        <body>
            <pb xml:id="Pagina_1" n="1" facs="#Pagina_1"></pb> 
            <div type="page" n="1" xml:lang="french">
                <ab type="paragraph" n="1" xml:id="P1_Prolusione_1" ref = "#Pagina_1">
                    <lb xml:id="P1_R1" n="1" facs="#Pagina_1_Riga_1"/>
                    Si la chaire que <persPronouns value = "je">j</persPronouns>’ai <metamark function = "reorder">l’honneur </metamark> en ce
                    <lb xml:id="P1_R2" n="2" facs="#Pagina_1_Riga_2"/>
                    moment d’inaugurer, représentait un ordre
                    <lb xml:id="P1_R3" n="3" facs="#Pagina_1_Riga_3"/>
                    d’études <add place = "above"><gap extent = "2 words" reason = "deleted" /></add> nouveau <del rend="overstrike">parmi ceux qui ont <gap quantity="4" units="chars" reason="illegible"/> leur</del>
                    <lb xml:id="P1_R4" n="4" facs="#Pagina_1_Riga_4"/>
                    <del rend="overstrike">place</del> <gap extent="1 word" reason="illegible"/> dans <institution>notre Université </institution>, <add place="above" resp="#FdS">si <persPronouns value = "je">j</persPronouns>’avais</add> <del rend="overstrike"> <persPronouns value = "je">je</persPronouns> considérerais </del>
                    <lb xml:id="P1_R5" n="5" facs="#Pagina_1_Riga_5"/>
                    <metamark function = "insert"><add place="left" resp="#FdS">aujourd’hui</add> </metamark><add place="above" resp="#FdS">la mission ou le</add> <gap extent = "7 words" reason = "deleted"/> privilège <del rend="overstrike"> de vous </del>
                    <lb xml:id="P1_R6" n="6" facs="#Pagina_1_Riga_6"/>
                    <add place="above" resp="#FdS">de vous <choice><abbr resp="#FdS">introdui</abbr> <expan>(introduire)</expan></choice> dans l’édifice <gap extent = "3 words" reason= "deleted"/></add>
                    <lb xml:id = "P1_R7" n = "7" facs = "#Pagina_1_Riga_7" />
                    <gap extent = "3 lines" reason = "deleted"/>
                    <lb xml:id="P1_R8" n="8" facs="#Pagina_1_Riga_8"/>
                    <addSpan spanTo= "#span1" place="left" resp="#FdS" /><gap extent= "3 words" reason = "deleted"/>
                    <lb xml:id="P1_R9" n="9" facs="#Pagina_1_Riga_9"/>
                    que la <term ref="#sdl"><choice><abbr resp="#FdS">sc.</abbr><expan>(science)</expan></choice>du
                    <lb xml:id="P1_R10" n="10" facs="#Pagina_1_Riga_10"/>
                    <choice><abbr resp="#FdS">lang</abbr><expan>(langage)</expan></choice></term> est <choice><abbr resp="#FdS">occ.</abbr><expan>(occupée)</expan></choice>
                    <lb xml:id="P1_R11" n="11" facs="#Pagina_1_Riga_11"/>
                    à <choice><abbr resp="#FdS">cstr.</abbr><expan>(construire)</expan></choice>depuis
                    <lb xml:id="P1_R12" n="12" facs="#Pagina_1_Riga_12"/>
                    <date>70 ans</date>
                    <lb xml:id="P1_R13" n="13" facs="#Pagina_1_Riga_13"/>
                    à <gap extent = "1 word" reason="deleted"/>
                    <lb xml:id="P1_R14" n="14" facs="#Pagina_1_Riga_14"/>
                    décrire
                    <lb xml:id="P1_R15" n="15" facs="#Pagina_1_Riga_15"/>
                    <choice><abbr resp="#FdS">ds</abbr><expan>(dans)</expan></choice> ses <choice><abbr resp="#FdS">grds</abbr><expan>(grandes)</expan></choice>
                    <lb xml:id="P1_R16" n="16" facs="#Pagina_1_Riga_16"/>
                    lignes l’état présent
                    <lb xml:id="P1_R17" n="17" facs="#Pagina_1_Riga_17"/>
                    de cette science,
                    <lb xml:id="P1_R18" n="18" facs="#Pagina_1_Riga_18"/>
                    à <unclear reason="illegible">parcourir</unclear> son passé, qui
                    <lb xml:id="P1_R19" n="19" facs="#Pagina_1_Riga_19"/>
                    n’est pas très long,
                    <lb xml:id="P1_R20" n="20" facs="#Pagina_1_Riga_20"/>
                    ou à <choice><abbr resp="#FdS">pronostiq.</abbr><expan>(pronostiquer)</expan></choice>
                    <lb xml:id="P1_R21" n="21" facs="#Pagina_1_Riga_21"/>
                    son avenir,
                    <lb xml:id="P1_R22" n="22" facs="#Pagina_1_Riga_22"/>
                    à définir son
                    <lb xml:id="P1_R23" n="23" facs="#Pagina_1_Riga_23"/>
                    but, son utilité,
                    <lb xml:id="P1_R24" n="24" facs="#Pagina_1_Riga_24"/>
                    à marquer la
                    <lb xml:id="P1_R25" n="25" facs="#Pagina_1_Riga_25"/>
                    place qu’elle
                    <lb xml:id="P1_R26" n="26" facs="#Pagina_1_Riga_26"/>
                    occupe dans le
                    <lb xml:id="P1_R27" n="27" facs="#Pagina_1_Riga_27"/>
                    cercle des <choice><abbr resp="#FdS">con.</abbr><expan>(connaissances)</expan></choice>
                    <lb xml:id="P1_R28" n="28" facs="#Pagina_1_Riga_28"/>
                    humaines et les
                    <lb xml:id="P1_R29" n="29" facs="#Pagina_1_Riga_29"/>
                    services qu’elle peut
                    <lb xml:id="P1_R30" n="30" facs="#Pagina_1_Riga_30"/>
                    rendre dans <unclear reason="illegible">une</unclear><anchor xml:id = "span1" /> <metamark function = "insert" />            
                    <lb xml:id="P1_dx1" n="1" />
                    [passé et de l'avenir des études, <gap quantity="4" units="chars" reason="illegible"/>
                    <lb xml:id="P1_dx2" n="2"/> 
                    de leur utilité, <gap quantity="4" units="chars" reason="illegible"/> de leur intérêt <gap extent = "2 words" reason="illegible"/>
